<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryLight"
    tools:context=".ChooseQuizActivity">

    <Button
        android:id="@+id/button6"
        android:layout_width="127dp"
        android:layout_height="69dp"
        android:layout_marginBottom="60dp"
        android:background="@color/colorPrimary"
        android:onClick="signOut"
        android:text="Sign Out"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/quiz1Button"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="124dp"
        android:backgroundTint="@color/colorPrimaryLight"
        android:onClick="goToQuiz"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bow_png" />

    <ImageButton
        android:id="@+id/quiz2Button"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="@color/colorPrimaryLight"
        android:onClick="goToQuiz"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/quiz3Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/cloud_png" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:fontFamily="monospace"
        android:text="Click on an image to choose a quiz"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/quiz3Button"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/colorPrimaryLight"
        android:onClick="goToQuiz"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quiz1Button"
        app:srcCompat="@drawable/cake_png" />

    <Button
        android:id="@+id/button5"
        android:layout_width="127dp"
        android:layout_height="69dp"
        android:background="@color/colorPrimary"
        android:onClick="goToResults"
        android:text="Results"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/button6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quiz3Button" />
</androidx.constraintlayout.widget.ConstraintLayout>