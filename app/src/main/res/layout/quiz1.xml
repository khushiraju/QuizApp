<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryLight"
    tools:context=".Quiz1Activity">

    <Button
        android:id="@+id/submit"
        android:layout_width="102dp"
        android:layout_height="0dp"
        android:layout_marginBottom="34dp"
        android:background="@color/colorPrimary"
        android:onClick="submitResults"
        android:text="GO!"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/q3option2" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="355dp"
        android:layout_height="60dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="17dp"
        android:fontFamily="monospace"
        android:text="You have a busy day at school and a friend comes to talk to you about their life problems. You..."
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/q1option2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton4" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="9dp"
        android:fontFamily="monospace"
        android:text="You are sitting in a restaraunt and it has been 45 minutes and your food has not come. You..."
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/q2option2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/q1option2" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="155dp"
        android:layout_height="100dp"
        android:layout_marginTop="34dp"
        android:layout_marginBottom="29dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/textView10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageButton4"
        app:layout_constraintVertical_bias="0.866"
        tools:srcCompat="@drawable/bow_png" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="298dp"
        android:layout_height="45dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="monospace"
        android:text="Someone in the group proposes an idea you disagree with. You..."
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/q3option2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/q2option2" />

    <Button
        android:id="@+id/q1option1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="37dp"
        android:layout_marginEnd="77dp"
        android:background="@color/colorPrimary"
        android:text="Interrupt them"
        android:textColor="#FFFFFF"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="@+id/q1option2"
        app:layout_constraintEnd_toStartOf="@+id/q1option2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/q1option2" />

    <Button
        android:id="@+id/q1option2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="16dp"
        android:background="@color/colorPrimary"
        android:text="Give your undivided"
        android:textColor="#FFFFFF"
        android:textSize="8sp"
        app:layout_constraintBottom_toTopOf="@+id/textView11"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/q1option1"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <Button
        android:id="@+id/q3option1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="37dp"
        android:layout_marginEnd="77dp"
        android:background="@color/colorPrimary"
        android:text="You defend your view point"
        android:textColor="#FFFFFF"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="@+id/q3option2"
        app:layout_constraintEnd_toStartOf="@+id/q3option2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/q3option2"
        app:layout_constraintVertical_bias="0.0" />


    <Button
        android:id="@+id/q2option1"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_marginStart="37dp"
        android:layout_marginEnd="77dp"
        android:layout_marginBottom="44dp"
        android:background="@color/colorPrimary"
        android:text="Complain loudly"
        android:textColor="#FFFFFF"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView9"
        app:layout_constraintEnd_toStartOf="@+id/q2option2"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/q3option2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="23dp"
        android:background="@color/colorPrimary"
        android:text="You don't contradict them"
        android:textColor="#FFFFFF"
        android:textSize="8sp"
        app:layout_constraintBottom_toTopOf="@+id/submit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/q3option1"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <Button
        android:id="@+id/q2option2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="17dp"
        android:background="@color/colorPrimary"
        android:text="Wait patiently"
        android:textColor="#FFFFFF"
        android:textSize="8sp"
        app:layout_constraintBottom_toTopOf="@+id/textView9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/q2option1"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="98dp"
        android:background="@color/colorPrimaryLight"
        android:onClick="backButton"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/textView10"
        app:layout_constraintEnd_toStartOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/imageedit_3_3913943665" />
</androidx.constraintlayout.widget.ConstraintLayout>